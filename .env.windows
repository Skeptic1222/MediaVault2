# Windows Production Environment Configuration for SecureGallery Pro
# Copy this file to .env and configure the values for your Windows deployment

# Database Configuration - SQL Server Express
DB_TYPE=sqlserver
DB_SERVER=localhost\SQLEXPRESS
DB_NAME=SecureGalleryPro
DB_USER=your_sql_user
DB_PASSWORD=your_sql_password
DB_ENCRYPT=false
DB_TRUST_CERTIFICATE=false

# Alternative: Use Windows Authentication (recommended for security)
# DB_TRUSTED_CONNECTION=true
# DB_INTEGRATED_SECURITY=true

# Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your-secure-session-secret-here
FILESYSTEM_MASTER_KEY=your-32-character-encryption-key-here

# File Upload Configuration
MAX_FILE_SIZE=2147483648
UPLOAD_DIR=C:\inetpub\wwwroot\SecureGalleryPro\uploads
LOG_DIR=C:\inetpub\wwwroot\SecureGalleryPro\logs

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Performance Configuration
MAX_CONCURRENT_UPLOADS=5
THUMBNAIL_QUALITY=80
COMPRESSION_LEVEL=6

# Monitoring and Logging
LOG_LEVEL=info
ERROR_LOG_PATH=C:\inetpub\wwwroot\SecureGalleryPro\logs\error.log
ACCESS_LOG_PATH=C:\inetpub\wwwroot\SecureGalleryPro\logs\access.log

# Windows Service Configuration
SERVICE_NAME=SecureGalleryPro
SERVICE_DESCRIPTION=SecureGallery Pro Enterprise File Management System
SERVICE_USER=LocalSystem