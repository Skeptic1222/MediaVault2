# Windows Production Environment - PostgreSQL + IIS Configuration
# Copy this file to .env in your IIS deployment directory

# Database Configuration - PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/mediavault

# Application Configuration
NODE_ENV=production
PORT=3000

# File Storage Configuration (Windows Paths)
UPLOAD_DIR=D:\\project\\mediavault\\\uploads
LOG_DIR=D:\\project\\mediavault\\logs
TEMP_DIR=D:\\project\\mediavault\\temp

# Session Security
SESSION_SECRET=your-ultra-secure-session-secret-change-this-in-production

# File Encryption (for vault feature)
FILESYSTEM_MASTER_KEY=your-32-character-encryption-key-here12

# File Upload Limits
MAX_FILE_SIZE=2147483648
MAX_CONCURRENT_UPLOADS=5

# Image Processing
THUMBNAIL_QUALITY=80
COMPRESSION_LEVEL=6

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Windows Service Configuration
SERVICE_NAME=MediaVault
SERVICE_DESCRIPTION=SecureGallery Pro - Media Vault Management System

# Performance Settings
MAX_MEMORY_RESTART=1024MB
NODE_MEMORY_LIMIT=1024

# Logging Configuration
LOG_LEVEL=info
ERROR_LOG_PATH=D:\\project\\mediavault\\logs\\error.log
ACCESS_LOG_PATH=D:\\project\\mediavault\\logs\\access.log

# Trust proxy (important for IIS)
TRUST_PROXY=true