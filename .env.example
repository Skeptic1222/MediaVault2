# Database Configuration
# PostgreSQL database connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Session Configuration
# Secret key for signing session cookies (generate a random string)
SESSION_SECRET=your-session-secret-here

# File Encryption (Optional)
# Master key for encrypting files stored on filesystem
# Generate with: openssl rand -hex 32
FILESYSTEM_MASTER_KEY=

# Authentication Configuration (if using OAuth providers)
# Replit Auth (Optional - only if using Replit authentication)
REPLIT_AUTH_CLIENT_ID=
REPLIT_AUTH_CLIENT_SECRET=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Application Settings
NODE_ENV=development
PORT=5000

# File Upload Limits (Optional)
# Maximum file size in bytes (default: 1GB)
MAX_UPLOAD_SIZE=1073741824

# Storage Configuration (Optional)
# Storage type: database | filesystem | hybrid
DEFAULT_STORAGE_TYPE=database

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# External APIs (Optional)
# OpenAI API for AI features
OPENAI_API_KEY=

# Stripe for payments
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# AWS S3 for cloud storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=

# Security Settings
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log